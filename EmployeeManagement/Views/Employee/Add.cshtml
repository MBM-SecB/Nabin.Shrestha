@model Employee
<h1>Add new Employee</h1>
@* taghelper *@

<form asp-controller="Employee" asp-action="Add" method="POST">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter Name">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input type="text" class="form-control" asp-for="Surname" placeholder="Last Name">
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <textarea type="text" class="form-control" asp-for="Address" placeholder="Address"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label><br>
        Male <input type="radio" name="Gender" value="M" class="form-control" asp-for="Gender" placeholder="Gender">
        Female <input type="radio" name="Gender" value="F" class="form-control" asp-for="Gender" placeholder="Gender">
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input type="number" class="form-control" asp-for="Salary" placeholder="Salary">
    </div>
    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>